<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.example.demo.HelloController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <children>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Login" textFill="#00bfff" />
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <Button fx:id="loginButton" mnemonicParsing="false" text="Login"/>
                <Button fx:id="switchButton" mnemonicParsing="false" text="Switch to SignUp" />
            </children>
        </HBox>
    </children>
</GridPane>
